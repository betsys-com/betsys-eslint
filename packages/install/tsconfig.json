{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "types": ["node"],
    "sourceMap": false,
    "declaration": false,
    "outDir": "dist/tsc-out",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@package/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
